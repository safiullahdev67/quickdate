# Public config for client-side Firebase SDK
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional for Analytics
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Server-side Admin SDK credentials (choose ONE of the options below)

# Option A: Individual env vars (recommended)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# IMPORTANT: keep the surrounding quotes. Replace \n with literal \n characters.
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_LINES\n-----END PRIVATE KEY-----\n"

# Option B: Full service account JSON (as a single environment variable)
# Paste the raw JSON with escaped newlines for the private_key
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}'

# Seed token for POST /api/admin-users/seed
# Set to a strong random string and keep secret.
ADMIN_SEED_TOKEN=
